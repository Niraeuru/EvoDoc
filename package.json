{
    "name": "evodoc",
    "displayName": "EvoDoc",
    "description": "Enterprise-standard developer assistant for automatic documentation generation using Gemini.",
    "icon": "resources/icon.png",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "evodoc-activitybar",
                    "title": "EvoDoc",
                    "icon": "resources/icon.png"
                }
            ]
        },
        "views": {
            "evodoc-activitybar": [
                {
                    "id": "evodoc-sidebar",
                    "name": "EvoDoc Assistant",
                    "type": "webview"
                }
            ]
        },
        "commands": [
            {
                "command": "evodoc.toggle",
                "title": "EvoDoc: Toggle Active State"
            },
            {
                "command": "evodoc.generate",
                "title": "EvoDoc: Generate Documentation"
            },
            {
                "command": "evodoc.updateScreenshots",
                "title": "EvoDoc: Update Frontend Screenshots"
            }
        ],
        "configuration": {
            "title": "EvoDoc",
            "properties": {
                "evodoc.enableOnSave": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically update documentation when files are saved."
                },
                "evodoc.changeThreshold": {
                    "type": "number",
                    "default": 50,
                    "description": "Number of lines changed (added/removed) before triggering an update on save."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/adm-zip": "^0.5.7",
        "@types/mocha": "^10.0.6",
        "@types/node": "20.x",
        "@types/vscode": "^1.85.0",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "@vscode/test-electron": "^2.3.8",
        "eslint": "^8.56.0",
        "glob": "^13.0.0",
        "mocha": "^10.2.0",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "adm-zip": "^0.5.16",
        "groq-sdk": "^0.3.3",
        "puppeteer": "^24.37.2"
    }
}
